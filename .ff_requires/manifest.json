{
	"name": "TikTok Download Buttons",
	"description": "Adds download buttons to TikTok videos",
	"author": "emy",
	"manifest_version": 2,
	"version": "1.0.6",
	"homepage_url": "https://github.com/sixem/tiktok-download-buttons",
	"icons": {
		"48": "48.png",
		"128": "128.png"
	},
	"browser_action": {
		"default_title": "TikTok Download Buttons",
		"default_popup": "popup.html",
		"default_icon": "128.png"
	},
	"background": {
		"scripts": ["service.js"],
		"persistent": true
	},
	"content_scripts": [{
		"matches": [
			"https://tiktok.com/*",
			"https://www.tiktok.com/*"
		],
		"js": ["main.js"],
		"css": ["main.css"],
		"run_at": "document_idle"
	}],
	"permissions": [
		"downloads",
		"storage",
		"*://*.tiktok.com/*",
		"https://tiktok.com/*",
		"https://*.tiktokcdn.com/*",
		"https://*.tiktokv.com/*"
	]
}